<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Flats</h1>


  <div class="card">
    <div id="map"
         style="width: 100%; height: 600px;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>


  <%= link_to 'New Flat', new_flat_path, class: 'btn btn-secondary my-5' %>




  <div class="cards">
      <% @flats.each do |flat| %>
      <div class="card">
        <div class="card-product">
          <img src="https://images.unsplash.com/photo-1501183638710-841dd1904471?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" />
          <div class="card-product-infos">
            <h2><%= flat.name %></h2>
            <p><%= flat.address %></p>

            <div class="d-flex justify-content-end mt-3">
              <%= link_to 'Show', flat, class: "btn btn-xs btn-primary mr-1" %>

              <%= link_to 'Edit', edit_flat_path(flat), class: "btn btn-xs mr-1 btn-info" %>
              <%= link_to 'Destroy',
                          flat,
                          method: :delete,
                          data: { confirm: 'Are you sure?' },
                          class: "btn btn-xs btn-danger"
              %>
            </div>
          </div>
        </div>

      </div>
      <% end %>

  </div>


</div>

